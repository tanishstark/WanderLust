<% layout("/layouts/boilerplate") %>

    <body>
        <div class="error-wrapper">
            <div class="error-content">
                <!-- Error Icon (instead of PNG) -->
                <div class="error-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>

                <!-- Error Content -->
                <div class="error-text">
                    <h3 class="fw-bold text-dark mb-3">Something went wrong</h3>
                    <div class="error-message-box">
                        <strong>
                            <%= message %>
                        </strong>
                    </div>

                    <div class="error-actions">
                        <button class="btn retry-btn" onclick="location.reload()">
                            <i class="fas fa-sync-alt me-2"></i>
                            Try Again
                        </button>
                        <button class="btn btn-outline-secondary ms-3" onclick="history.back()">
                            <i class="fas fa-arrow-left me-2"></i>
                            Go Back
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Simplified Styles -->
        <style>
            body {
                background-color: #f8f9fa;
                min-height: 100vh;
                margin: 0;
                padding: 0;
            }

            .error-wrapper {
                min-height: 100vh;
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 1rem;
            }

            .error-content {
                text-align: center;
                max-width: 500px;
                width: 100%;
            }

            .error-icon {
                margin-bottom: 1.5rem;
            }

            .error-icon i {
                font-size: 4rem;
                color: #ffc107;
                animation: bounce 2s infinite;
            }

            @keyframes bounce {

                0%,
                20%,
                50%,
                80%,
                100% {
                    transform: translateY(0);
                }

                40% {
                    transform: translateY(-10px);
                }

                60% {
                    transform: translateY(-5px);
                }
            }

            .error-text h3 {
                font-size: 1.5rem;
                color: #2c3e50;
            }

            .error-message-box {
                background: #fff3cd;
                border: 2px solid #ffc107;
                border-radius: 10px;
                padding: 1rem;
                margin: 1rem 0;
                font-size: 1rem;
                color: #856404;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            }

            .retry-btn {
                background-color: #fe424d;
                border: none;
                color: white;
                border-radius: 8px;
                font-weight: 600;
                padding: 0.5rem 1.5rem;
                transition: all 0.3s ease;
            }

            .retry-btn:hover {
                background-color: #e6374b;
                transform: translateY(-1px);
                color: white;
            }

            .btn-outline-secondary {
                border-radius: 8px;
                font-weight: 600;
                padding: 0.5rem 1.5rem;
            }

            /* Responsive */
            @media (max-width: 768px) {
                .error-icon i {
                    font-size: 3rem;
                }

                .error-text h3 {
                    font-size: 1.25rem;
                }

                .error-actions {
                    display: flex;
                    flex-direction: column;
                    gap: 0.5rem;
                }

                .btn.ms-3 {
                    margin-left: 0 !important;
                }
            }
        </style>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>